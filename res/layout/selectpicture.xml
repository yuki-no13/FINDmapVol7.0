    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgview_id"
        android:layout_width="fill_parent"
        android:layout_height="350dp" />

 <Button
     android:id="@+id/OKbotton"
